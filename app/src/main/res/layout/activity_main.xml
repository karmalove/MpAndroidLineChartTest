<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ffff"
    tools:context="com.qcy_bracelet.qcy.mpandroidlinecharttest.MainActivity">
    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2015-12-3"
        android:textColor="#18da35"/>
    <LinearLayout
        android:id="@+id/content"
        android:layout_below="@id/date"
        android:layout_width="500dp"
        android:layout_height="20dp"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/day"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="80dp"
        android:text="日"/>
    <TextView
        android:id="@+id/week"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="周"/>
    <TextView
        android:id="@+id/month"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="月"/>
    </LinearLayout>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/lineChart"
        android:layout_below="@id/content"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:foregroundGravity="center_horizontal"></com.github.mikephil.charting.charts.LineChart>
</RelativeLayout>
